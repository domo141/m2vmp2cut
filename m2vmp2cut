# Last modified: Mon Jul 21 15:43:46 EEST 2008 too

ver=devel

case $1 in '') echo; echo m2vmp2cut version $ver ;; esac

dn=`dirname "$0"`

trap 'echo Neither did \"$c1\" >&2' 0

case $dn in
    *bin)
	c1="$dn/../lib/m2vmp2cut-$ver/bin/m2vmp2cut.sh"
	test -x "$c1" && exec "$c1" "$@" \
		|| exec "$dn/bin/m2vmp2cut.sh" "$@" ;;
    *)
    	c1="$dn/bin/m2vmp2cut.sh"
	test -x "$c1" && exec "$c1" "$@" \
		|| exec "$dn/../lib/m2vmp2cut-$ver/bin/m2vmp2cut.sh" "$@" ;;
esac
